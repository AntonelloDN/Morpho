<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net48;netstandard2.1;netcoreapp3.1</TargetFrameworks>
		<RootNamespace>MorphoReader</RootNamespace>
		<AssemblyName>MorphoReader</AssemblyName>
		<Authors>AntonelloDN</Authors>
		<Company>ENVI-met GmbH</Company>
		<PackageId>Morpho.Envimet</PackageId>
		<Product>Morpho.Envimet</Product>
		<Version>1.2.0</Version>
		<Title>Envimet libraries</Title>
		<PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
		<Copyright>Copyright © 2022 Antonello Di Nunzio</Copyright>
		<PackageProjectUrl>https://github.com/AntonelloDN/Morpho</PackageProjectUrl>
		<RepositoryUrl>https://github.com/AntonelloDN/Morpho</RepositoryUrl>
		<PackageIcon>logo_morpho_32.png</PackageIcon>
		<Description>Envimet libraries to create models and read results</Description>
		<TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
		<Configurations>Debug;Release;ReleaseLoc</Configurations>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release' Or '$(Configuration)'=='ReleaseLoc'">
		<DebugType>none</DebugType>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='ReleaseLoc|net48|AnyCPU'">
	  <Optimize>True</Optimize>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\MorphoGeometry\MorphoGeometry.csproj">
			<ReferenceOutputAssembly>true</ReferenceOutputAssembly>
			<IncludeAssets>MorphoGeometry.dll</IncludeAssets>
		</ProjectReference>
		<ProjectReference Include="..\Morpho25\Morpho25.csproj">
			<ReferenceOutputAssembly>true</ReferenceOutputAssembly>
			<IncludeAssets>Morpho25.dll</IncludeAssets>
		</ProjectReference>
	</ItemGroup>
	
	<ItemGroup>
		<None Include="logo_morpho_32.png" Pack="true" PackagePath="." />
	</ItemGroup>

	<Target DependsOnTargets="ResolveReferences" Name="CopyProjectReferencesToPackage">
		<ItemGroup>
			<BuildOutputInPackage Include="@(ReferenceCopyLocalPaths-&gt;WithMetadataValue('ReferenceSourceTarget', 'ProjectReference'))" />
		</ItemGroup>
	</Target>

</Project>